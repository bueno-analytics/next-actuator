{
  "compilerOptions": {
    /* ESM */
    "moduleResolution": "node",
    "target": "es2019",
    "module": "CommonJS",

    /* Build */
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,

    /* Checks */
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    /* Test types */
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
